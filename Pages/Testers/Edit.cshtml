@page
@model Proiect2.Pages.Testers.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Tester</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Tester.ID" />
            <div class="form-group">
                <label asp-for="Tester.FirstName" class="control-label"></label>
                <input asp-for="Tester.FirstName" class="form-control" />
                <span asp-validation-for="Tester.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tester.LastName" class="control-label"></label>
                <input asp-for="Tester.LastName" class="form-control" />
                <span asp-validation-for="Tester.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tester.Adress" class="control-label"></label>
                <input asp-for="Tester.Adress" class="form-control" />
                <span asp-validation-for="Tester.Adress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tester.Email" class="control-label"></label>
                <input asp-for="Tester.Email" readonly class="form-control" />
                <span asp-validation-for="Tester.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tester.Phone" class="control-label"></label>
                <input asp-for="Tester.Phone" class="form-control" />
                <span asp-validation-for="Tester.Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
